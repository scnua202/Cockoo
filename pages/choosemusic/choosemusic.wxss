/* 新搜索栏 */
.search{
  flex: auto;
  display: flex;
  flex-direction: column;
  background: #fff;
}

.search-bar{
  flex: none;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f4f4f4;
}

.search-cancel{
  padding: 0 20rpx;
  font-size: 28rpx;
}

.search-wrap{
  position: relative;
  flex: auto;
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 0 20rpx;
  background: #fff;
  border-radius: 6rpx;
}
.search-wrap .icon-search{
  margin-right: 10rpx;
}
.search-wrap .search-input{
  flex: auto;
  font-size: 28rpx;
}

.search-click
{
  color: #3197ed;
}

/*热门关键词*/
.search-hot{
  padding: 30rpx;
}
.hot-title{
  display: block;
  margin-bottom: 16rpx;
  font-weight: bold;
  font-size: 28rpx;
  color: rgba(0,0,0,.6);
}
.hot-wrap{
  display: flex;
  flex-wrap: wrap;
}
.hot-item{
  margin-right: 28rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #000;
  border: 2rpx solid rgba(0,0,0,.6);
  border-radius: 200rpx;
}
.hot-item.hot{
  color: #fc4524;
  border-color: #fc4524;
}
.audioplay
{
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}


/* 搜素偶结果展示 */
scroll-view
{
  
  width: 100%;
  height: 70%;
  white-space: nowrap;
}

.scroll-item-x
{
  height: 100rpx;
  font-size: 10pt;
  background-color: white;
  color: black;
  line-height: 100rpx;
  text-align: center;
}

.scroll-container
{
  margin-top: 10rpx;
  display: flex;
  justify-content: center;
}

.smalltext
{
  margin-bottom: 3rpx;
  font-size: 5pt;
  text-align: center;
  color: gainsboro;
}